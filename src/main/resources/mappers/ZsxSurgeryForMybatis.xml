    <select id="selectPrescription" resultMap="prescription">
        select * from zsx_prescription
        inner join zsx_prescription_details on zsx_prescription.prescription_id=zsx_prescription_details.prescription_id
        inner join yxj_project on zsx_prescription_details.prescription_project=yxj_project.project_id
        where yxj_project.project_type=1
    </select>


